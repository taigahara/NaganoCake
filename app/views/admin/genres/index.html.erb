<h1>ジャンル一覧</h1>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div>
      <div>
          <label>ジャンル</label>
          <%= f.text_field :name %>
      </div>
      <div>
          <label>販売ステータス</label>
          <span><%= f.radio_button :is_invalid, '有効' %>有効</span>
          <span><%= f.radio_button :is_invalid, '無効' %>無効</span>
      </div>
  </div>
  <div>
      <%= f.submit '新規登録' %>
  </div>
<% end %>

  <tbody>
      <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_invalid %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
          </tr>
      <% end %>
  </tbody>