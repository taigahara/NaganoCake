<h3>商品新規登録画面</h3>
        <%= form_with model: @product, url: admin_items_path do |f| %>
            <div>
            <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
            </div>
            <div>
                <div>
                    <label>商品名</label>
                    <%= f.text_field :name %>
                </div>
                <div>
                    <label>商品説明</label>
                    <%= f.text_area :explanation%>
                </div>
                <div>
                    <label>ジャンル</label>
                    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
                </div>
                <div>
                    <label>税抜価格</label>
                    <%= f.text_field :price %>円
                </div>
                <div>
                    <label>販売ステータス</label>
                    <span><%= f.radio_button :is_sold, '販売中' %>販売中</span>
                    <sapn><%= f.radio_button :is_sold, '販売停止中' %>販売停止中</span>
                </div>
            </div>
            <div>
                <%= f.submit '新規登録' %>
            </div>
        <% end %>