<h3>注文一覧</h3>
<table>
    <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td>
                    <%= link_to order.created_at.strftime('%Y/%m/%d'),admin_order_path(order) %>
                </td>
                <td>
                    <%= order.end_user.first_name + order.end_user.last_name %>
                </td>
                <td>
                <td><%= order.order_details.sum(:quantity) %></td>
                </td>
                <td>
                    <%= order.status_i18n %>
                </td>
        <% end %>
    </tbody>